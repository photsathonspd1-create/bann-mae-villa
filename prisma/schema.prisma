generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  role      String    @default("USER")
  createdAt DateTime  @default(now())
  accounts  Account[]
  bookings  Booking[]
  sessions  Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Villa {
  id            String    @id @default(cuid())
  name          String
  slug          String    @unique
  location      String
  price         Float
  bedrooms      Int
  bathrooms     Int
  description   String?
  images        String[]
  status        String    @default("AVAILABLE")
  nameTh        String?
  nameEn        String?
  nameCn        String?
  descriptionTh String?
  descriptionEn String?
  descriptionCn String?
  locationEn    String?
  locationCn    String?
  featuresEn    String?
  featuresCn    String?
  facilities    String[]
  mapEmbedUrl   String?
  threeDTourUrl String?
  floorPlanUrl  String?
  videoTourUrl  String?
  latitude      Float?
  longitude     Float?
  nearbyPlaces  Json?
  views         Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  areaSqM       Float?
  areaSqWah     Float?
  plotNumber    String?
  type          String?
  discountPrice Float?
  usableAreaSqM Float?
  bookings      Booking[]
  leads         Lead[]
}

model Lead {
  id        String     @id @default(cuid())
  name      String
  message   String?
  villaId   String?
  status    LeadStatus @default(NEW)
  createdAt DateTime   @default(now())
  email     String?
  phone     String
  lineId    String?
  visitDate DateTime?
  villa     Villa?     @relation(fields: [villaId], references: [id])
}

model SearchQuery {
  id             String   @id @default(cuid())
  query          String   @unique
  count          Int      @default(1)
  lastSearchedAt DateTime @default(now())
}

model Booking {
  id                String        @id @default(cuid())
  villaId           String
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  bookingDate       DateTime      @default(now())
  bookingFee        Float         @default(200000)
  contractFee       Float?
  customerName      String
  installmentAmount Float?
  lineId            String?
  phone             String
  totalAmount       Float
  userId            String?
  status            BookingStatus @default(PENDING)
  user              User?         @relation(fields: [userId], references: [id])
  villa             Villa         @relation(fields: [villaId], references: [id], onDelete: Cascade)
  payments          Payment[]
}

model Payment {
  id            String        @id @default(cuid())
  bookingId     String
  installmentNo Int
  amount        Float
  dueDate       DateTime
  status        PaymentStatus @default(PENDING)
  proofImage    String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  booking       Booking       @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

model Article {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  coverImage  String?
  excerpt     String?
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Campaign {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  bannerImage String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HeroSlide {
  id         String   @id
  imageUrl   String
  titleTh    String?
  titleEn    String?
  titleCn    String?
  subtitleTh String?
  subtitleEn String?
  subtitleCn String?
  linkUrl    String?
  order      Int      @default(0)
  clicks     Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Setting {
  key       String   @id
  value     String?
  updatedAt DateTime
}

model SiteContent {
  id        String   @id
  key       String   @unique
  contentTh String?
  contentEn String?
  contentCn String?
  imageUrl  String?
  visible   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model SiteSettings {
  id          String   @id @default("site-settings")
  phoneNumber String?
  lineId      String?
  lineUrl     String?
  facebookUrl String?
  whatsapp    String?
  updatedAt   DateTime
}

enum LeadStatus {
  NEW
  CONTACTED
  CLOSED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}
